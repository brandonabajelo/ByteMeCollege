<html>
<p id="notice"><%= notice %></p>
<body>
<h1>ByteMeCollege</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.body %></td>
        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
</body>

<button class="postButton">
       <span> <%= link_to 'New Post', new_post_path %> </span>
    </button>

<button class="postButton">
       <span> <%= link_to 'New Department', new_department_path %> </span>
    </button>


</html>
