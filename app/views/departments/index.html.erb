<table>
  <thead>
    <tr>
      <th>Departments</th>
      <th colspan="3"></th>
    </tr>
  </thead>

<div class="container">
    <div class="row clearfix">
    <div class="col-md-12 column">
      <table class="table table-bordered table-hover" id="tab_logic">
        <thead>
          <tr >
            <th class="text-center">
              Name
            </th>
            <th class="text-center">
              Mail
            </th>
            <th class="text-center">
              Link
            </th>
            <th class="text-center">
              Action
            </th>
          </tr>
        </thead>
        <tbody>
        <% @departments.each do |department| %>
      <tr>
        <td><%= department.d_name %></td>
        <td><%= department.link %></td>
        <td><%= link_to 'Show', department, {:class => 'pull-right btn btn-default'} %></td>
        <td><%= link_to 'Edit', edit_department_path(department), {:class => 'pull-right btn btn-default'} %></td>
        <td><%= link_to 'Destroy', department, :id => 'delete_row', :class => 'pull-right btn btn-default', method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
          
        </tbody>
      </table>
    </div>
  </div>
  <%= link_to 'New Department', new_department_path, {:id => 'add_row', :class => 'btn btn-default pull-left'} %>
</div>

  <tbody>
    
  </tbody>
</table>

<br>


