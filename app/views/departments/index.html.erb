<table>
  <thead>
    <tr>
      <h1 class="pull-left">Departments</h1>
      <th colspan="3"></th>
    </tr>
  </thead>

<div class="container">
    <div class="row clearfix">
    <div class="col-md-12 column">
      <table class="table table-bordered table-hover" id="tab_logic">
        <thead>
          <tr >
            <th class="text-center">
              Name
            </th>
            <th class="text-center">
              Website Link
            </th>
            <th class="text-center">
              Actions
            </th>
          </tr>
        </thead>
        <tbody>
        <% @departments.each do |department| %>
        <tr>
          <!-- Name -->
          <td><div class="text-center"><%= department.d_name %></div></td>
          <!-- Website Link -->
          <td>
            <div class="text-center">
              <a href="<%= department.link %>" class="btn btn-primary" target="_blank">Link</a>
            </div>
          </td>
          <td>
            <div class="text-center">
              <!-- Show -->
              <%= link_to 'Show', department, {:class => 'pull-left btn btn-primary'} %>
            
              <!-- Edit -->
              <%= link_to 'Edit', edit_department_path(department), {:class => 'btn btn-primary'} %>
              <!-- Destory -->
              <%= link_to 'Destroy', department, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'pull-right btn btn-primary' %>
            </div>
          </td>
        </tr>
        <% end %>    
        </tbody>
      </table>
    </div>
  </div>
  <%= link_to 'Major List', majors_path, {:class => 'btn btn-primary'} %>
  <%= link_to 'New Department', new_department_path, {:id => 'add_row', :class => 'btn btn-primary'} %>
</div>
<br>
<%= link_to '', root_path, {:class => 'black glyphicon glyphicon-circle-arrow-left'} %></br>
  <tbody>
    
  </tbody>
</table>

<br>

