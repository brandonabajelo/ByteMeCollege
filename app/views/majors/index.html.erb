<p id="notice"><%= notice %></p>

<h1>Majors</h1>

<table>
  <thead>
    <tr>
      <th>Major</th>
      <th>Department</th>
      <th colspan="2">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @majors.each do |major| %>
      <tr>
        <td><%= major.m_name %></td>
        <td><%= major.d_name %></td>
        <td><%= link_to 'Edit', edit_major_path(major) %></td>
        <td><%= link_to 'Destroy', major, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

