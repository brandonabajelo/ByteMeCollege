<p id="notice"><%= notice %></p>
<table>
  <thead>
    <tr>
      <h1 class="pull-left">Courses</h1>
      <th colspan="3"></th>
    </tr>
  </thead>

<div class="container">
    <div class="row clearfix">
    <div class="col-md-12 column">
      <table class="table table-bordered table-hover" id="tab_logic">
        <thead>
          <tr >
            <th class="text-center">
              Department
            </th>
            <th class="text-center">
              Course name
            </th>
             <th class="text-center">
              Overall rating
            </th>
             <th class="text-center">
              Description
            </th>
             <th class="text-center">
              Units
            </th>
            <th colspan="3" class="text-center">
              Action
            </th>
          </tr>
        </thead>
        <tbody>
        <% @courses.each do |course| %>
        <tr>
          <!-- ID -->
          <td>
          <div class="text-center">
          <%= course.d_name %>
            </div>
          </td>
          <!-- Name -->
          <td>
            <div class="text-center">
              <%= course.course_name %>
            </div>
          </td>
          <td>
          <!-- Rating -->
          <div class="text-center">
          <%= course.overall_rate %>
            </div>
          </td>
          <td>
          <!-- Description -->
          <div class="text-center">
          <%= course.description %>
            </div>
          </td>
          <!-- Units -->
          <td>
          <div class="text-center">
          <%= course.units %>
            </div>
          </td>
          <td><%= link_to 'Reviews', reviews_path(), {:id => 'add_row', :class => 'btn btn-default'} %></td>
          <!--
          <td><%= link_to 'Edit', edit_course_path(course), {:id => 'add_row', :class => 'btn btn-default'} %></td>
          <td><%= link_to 'Destroy', course, :id => 'add_row', :class => 'btn btn-default', method: :delete, data: { confirm: 'Are you sure?' } %></td>
          -->
        </tr>
        <% end %>    
        </tbody>
      </table>
    </div>
  </div>
  <!--
  <%= link_to 'New Course', new_course_path, {:id => 'add_row', :class => 'btn btn-default'} %>
  -->
</div>
<br>
<%= link_to '', :back, {:class => 'glyphicon glyphicon-circle-arrow-left'} %></br>
  <tbody>
    
  </tbody>
</table>
