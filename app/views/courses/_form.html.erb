<%= form_for(course) do |f| %>
  <% if course.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(course.errors.count, "error") %> prohibited this course from being saved:</h2>

      <ul>
      <% course.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :department_id %>
    <%= collection_select(:course, :department_id, @departments, :id, :d_name, {}, {include_blank: true, :multiple => false, :prompt => 'Please select the department of this course'}) %>
  </div>

  <div class="field">
    <%= f.label :course_name %>
    <%= f.text_field :course_name %>
  </div>

  <div class="field">
    <%= f.label :overall_rate %>
    <%= f.text_field :overall_rate %>
  </div>

  <div class="field">
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>

  <div class="field">
    <%= f.label :units %>
    <%= f.number_field :units %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
