<table>
  <thead>
    <tr>
      <h1 class="pull-left">Show Review</h1>
      <th colspan="3"></th>
    </tr>
  </thead>

<div class="container">
    <div class="row clearfix">
    <div class="col-md-12 column">
      <table class="table table-bordered table-hover" id="tab_logic">
        <thead>
          <tr >
            <th class="text-left">
              Review
            </th>
            </tr>
            <tr>
          </tr>
        </thead>
        <tbody>
        <tr>
          <!-- Name -->
          <td>  
          <div><%= @review.email %>:</div>
          <%= @review.review %>
          </td>
          </tr>
          <tr class="text-left"><td style="font-weight: bold;">Replies:</td></tr>
          <!-- Reply Link -->
          <% @replies.each do |reply| %>
          <tr>
          <td>
            <div>
            <strong><%= reply.email %>:</strong>
            <%= reply.review %>
            </div>
          </td>
        </tr>
        <% end %>    
        </tbody>
      </table>
    </div>
  </div>
</div>
<br>
<%= link_to '', :back, {:class => 'glyphicon glyphicon-circle-arrow-left'} %></br>
