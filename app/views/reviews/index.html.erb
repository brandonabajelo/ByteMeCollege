<p id="notice"><%= notice %></p>

<table>
  <thead>
    <tr>
      <h1 class="pull-left">Reviews</h1>
      <th colspan="3"></th>
    </tr>
  </thead>

<div class="container">
    <div class="row clearfix">
    <div class="col-md-12 column">
      <table class="table table-bordered table-hover" id="tab_logic">
        <thead>
          <tr >
            <th class="text-center">
              Course
            </th>
             <th class="text-center">
              Author
            </th>
             <th class="text-center">
              Review
            </th>
             <th class="text-center">
              Thumbs up
            </th>
            <th class="text-center">
              Thumbs down
            </th>
            <th colspan="2" class="text-center">
              Action
            </th>
          </tr>
        </thead>
        <tbody>
        <% @reviews.each do |review| %>
        <tr>
          <!-- Course -->
          <td>
          <div class="text-center">
          <%= review.course_name %>
            </div>
          </td>
          <td>
          <!-- User id -->
          <div class="text-center">
          <%= review.email %>
            </div>
          </td>
          <td>
          <!-- Review -->
          <div class="text-center">
          <%= review.review %>
            </div>
          </td>
          <!-- Thumbs up -->
          <td>
          <div class="text-center">
          <%= review.thumb_up %>
            </div>
          </td>
          <!-- Thumbs down -->
          <td>
          <div class="text-center">
          <%= review.thumb_down %>
            </div>
          </td>

        <td>
          <%= link_to 'Reply Review', new_review_path(rid: review.id), {:id => 'add_row', :class => 'btn btn-default'} %> 
        </td>
      
        <td>
          <%= link_to 'Show', review, {:id => 'add_row', :class => 'btn btn-default'} %>
        </td>
      <!--
        <td>
          <%= link_to 'Edit', edit_review_path(review), {:id => 'add_row', :class => 'btn btn-default'} %>
        </td>
        <td>
        <%= link_to 'Destroy', review, :id => 'add_row', :class => 'btn btn-default', method: :delete, data: { confirm: 'Are you sure?' } %> 
        </td>
      -->
        </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <%= link_to 'Add an new Review', new_review_path(cid: @cid), {:id => 'add_row', :class => 'btn btn-default'} %>
</div>
<br>
<%= link_to '', :back, {:class => 'glyphicon glyphicon-circle-arrow-left'} %></br>
  <tbody>
    
  </tbody>
</table>
